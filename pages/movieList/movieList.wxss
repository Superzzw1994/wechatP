@import "../movie/movie.wxss";
.movieList_container{
   background-color: #ffffff;
   display: flex;
   flex-direction: column;
}
.movie_head{
    padding: 30rpx 20rpx 22rpx;
}
.inner-container{
    margin: 0  auto 20rpx;
}
.slogan{
    font-size:24rpx;
}
