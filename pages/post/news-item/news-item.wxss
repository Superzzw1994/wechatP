/* pages/post/news-item/news-item.wxss */
.news-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  border:1rpx solid #ededed;
  background-color: #fff;
  padding-bottom:5rpx;
}
.news-header{
  margin: 10rpx 0rpx 20rpx 10rpx;
}
.news-header image{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}
.news-header text{
  margin-left:20rpx;
  margin-bottom: 5px;
  font-size:26rpx;
  vertical-align: middle;
}
.title{
  margin:0 0 10rpx 10rpx;
  font-size:34rpx;
  font-weight: 600;
  color:#333;
}
.post-image{
  width:100%;
  height:340rpx;
  margin: 0 auto;
  margin-bottom: 15px;
} 
.content{
  color:#666;
  font-size:28rpx;
  margin-bottom:20rpx;
  margin-left:20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size:13px;
  flex-direction: row;
  line-height:16px;
  margin-left:10px;
}
.post-like-image{
  height:16px;
  width:16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-text{
  vertical-align: middle;
  margin-right: 20px;
}